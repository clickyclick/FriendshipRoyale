<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.friendshiproyale">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.NewGameActivity" />
        <activity android:name=".activities.ItemActivity" />
        <activity android:name=".activities.NPCCreationActivity" />
        <activity android:name=".activities.InventoryActivity" />
        <activity android:name=".activities.DiscoverEnemyActivity" />
        <activity android:name=".activities.EngageEnemyActivity"></activity>
    </application>

</manifest>